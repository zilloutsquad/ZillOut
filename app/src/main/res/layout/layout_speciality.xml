<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="item"
            type="com.idea.rentbaaz.PubDetailItem" />

    </data>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="168dp"
    android:layout_marginTop="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginBottom="@dimen/dp_16"
    app:cardElevation="@dimen/dp_16"
    app:cardCornerRadius="@dimen/dp_10"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/speciality_image"
            android:layout_width="168dp"
            app:cardCornerRadius="@dimen/dp_10"
            android:padding="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="168dp"
                android:layout_height="168dp"
                android:scaleType="fitXY"
                android:src="@drawable/s1" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/name"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_width="wrap_content"
            android:text="Carlsberg Red Beer"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/speciality_image"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_12"
            android:text="Red Ales can almost be thought of as the European version of an American Amber Ale."
            android:textSize="12sp"
            android:layout_below="@id/name"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
</layout>